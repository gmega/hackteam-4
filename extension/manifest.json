{
  "name": "SD Extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "SpazioDati extension to get more stuff out of company-related webpages",
  "background": {
    "pages": ["app/index.html"],
    "scripts": [
      "app/js/background.js", 
      "app/lib/jquery.js",
      "app/lib/jquery.tmpl.js"
    ],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "exclude_matches": ["*://www.google.it/*"],
    "exclude_globs": ["*chrome*"],
    "js": ["app/js/content.js", "app/lib/jquery.js"]
  }],
  "icons": {
    "16": "app/icons/atoka_16.png",
    "48": "app/icons/atoka_48.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/atoka_16.png"
    },
    "default_title": "SD Extension"
  },
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*"
  ],
  "web_accessible_resources": [
    "app/js/*.*", "app/lib/*.*", "app/css/*.*"
  ]
}